<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dn_spacer"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/add_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/Divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/center"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/date_label"
                    style="@style/Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"

                    android:text="Time:" />
                <TextView
                    android:id="@+id/track_label"
                    style="@style/Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/date_label"

                    android:text="Track:" />

                <TextView
                    android:id="@+id/skill_level_label"
                    style="@style/Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/track_label"
                    android:layout_toLeftOf="@+id/center"
                    android:text="Skill Level:" />

                <TextView
                    android:id="@+id/slot_label"
                    style="@style/Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/skill_level_label"
                    android:layout_toLeftOf="@+id/center"
                    android:text="Slot:"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tags_label"
                    style="@style/Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/slot_label"
                    android:layout_toLeftOf="@+id/center"
                    android:text="Tags:"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/center"
                    android:text="HTML5" />

                <TextView
                    android:id="@+id/track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date"
                    android:layout_toRightOf="@id/center"
                    android:text="HTML5" />

                <TextView
                    android:id="@+id/skill_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/track_label"
                    android:layout_toRightOf="@id/center" />

                <TextView
                    android:id="@+id/slot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/skill_level_label"
                    android:layout_toRightOf="@id/center"
                    android:visibility="invisible" />

                <org.jboss.aerogear.devnexus2015.ui.view.HorizontalListView
                    android:id="@+id/tags"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_below="@id/slot_label"

                    android:layout_toRightOf="@id/center"
                    android:visibility="invisible" />
            </RelativeLayout>

            <View style="@style/Divider" />

            <TextView
                android:id="@+id/speakersLabel"
                style="@style/Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speaker" />

            <LinearLayout
                android:id="@+id/speakers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
