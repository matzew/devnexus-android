<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="0dp">
    <!-- Start and end times -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="bottom"
                android:textColor="@color/dn_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dn_light_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Background photo, title, subtitle -->
        <RelativeLayout
            android:id="@+id/box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- Background photo -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />


            <!-- Block/slot chip contents -->
            <RelativeLayout
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:ellipsize="end"
                    
                    android:gravity="top|left"
                    android:maxLines="2"
                    android:layout_toLeftOf="@+id/give_feedback_button"
                    android:layout_alignParentLeft="true"
                    
                    android:layout_alignParentBottom="true"
                    android:text="One two threee four five six"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/give_feedback_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_schedule_feedback" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

